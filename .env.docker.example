# =================================
# EarnX Docker Development Environment Template
# =================================
# Copy this file to .env.docker and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# =================================
# Database Configuration (Docker MongoDB)
# =================================
MONGODB_URI=mongodb://earnx_admin:earnx_dev_password_123@mongodb:27017/earnx_verification?authSource=admin
DB_NAME=earnx_verification

# =================================
# Verification Service Settings
# =================================
VERIFICATION_TIMEOUT=30000
MAX_RETRIES=3
CACHE_TIMEOUT=300000

# =================================
# External API Integration
# =================================
SANCTIONS_API_URL=https://api.sanctions-check.com
SANCTIONS_API_KEY=your-sanctions-api-key
FRAUD_API_URL=https://api.fraud-detection.com
FRAUD_API_KEY=your-fraud-api-key

# =================================
# Chainlink Configuration
# =================================
CHAINLINK_FUNCTIONS_URL=https://functions.chain.link
CHAINLINK_API_KEY=your-chainlink-api-key
CHAINLINK_FUNCTIONS_SUBSCRIPTION_ID=your_functions_subscription_id
CHAINLINK_VRF_SUBSCRIPTION_ID=your_vrf_subscription_id

# =================================
# IPFS Configuration
# =================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# =================================
# Security Configuration (Development)
# =================================
API_KEY=dev-api-key-12345-not-for-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# Rate Limiting (Relaxed for Development)
# =================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=false

# =================================
# Monitoring & Metrics
# =================================
ENABLE_METRICS=true
METRICS_PORT=9090

# =================================
# Docker-specific Configuration
# =================================
DOCKER_ENV=true
CONTAINER_NAME=earnx-verification-api