{
  "name": "earnx-protocol",
  "version": "1.0.0",
  "description": "Tokenized African Trade Receivables with Chainlink",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "size:check": "hardhat compile && echo 'Contract sizes:' && hardhat size-contracts --only YieldXCore",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:quick": "hardhat run scripts/quick-deploy.ts --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "lint": "solhint 'contracts/**/*.sol'",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "docker:start": "./docker-commands.sh start",
    "docker:stop": "./docker-commands.sh stop",
    "docker:restart": "./docker-commands.sh restart",
    "docker:status": "./docker-commands.sh status",
    "docker:logs": "./docker-commands.sh logs",
    "docker:test": "./docker-commands.sh test",
    "docker:shell": "./docker-commands.sh shell",
    "docker:cleanup": "./docker-commands.sh cleanup"
  },
  "keywords": [
    "defi",
    "rwa",
    "tokenization",
    "trade-finance",
    "chainlink",
    "africa",
    "solidity",
    "typescript"
  ],
  "author": "EarnX Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.4.2",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chainlink/contracts-ccip": "^1.6.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "axios": "^1.10.0",
    "ethers": "^6.14.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
