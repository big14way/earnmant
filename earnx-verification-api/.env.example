# =================================
# EarnX Verification API Configuration
# =================================

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# =================================
# MongoDB Atlas Configuration
# =================================
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://earnx-api-user:<password>@earnx-verification-cluster.xxxxx.mongodb.net/earnx_verification?retryWrites=true&w=majority
DB_NAME=earnx_verification

# =================================
# Security Configuration
# =================================
API_KEY=your-secure-api-key-here
CORS_ORIGINS=http://localhost:3000,https://yield-x-qnbv.vercel.app

# =================================
# Rate Limiting & Throttling
# =================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# =================================
# Verification Service Settings
# =================================
VERIFICATION_TIMEOUT=30000
MAX_RETRIES=3
CACHE_TIMEOUT=300000

# =================================
# External API Integration
# =================================
SANCTIONS_API_URL=https://api.sanctions-check.com
SANCTIONS_API_KEY=your-sanctions-api-key
FRAUD_API_URL=https://api.fraud-detection.com
FRAUD_API_KEY=your-fraud-api-key

# =================================
# Chainlink Integration
# =================================
CHAINLINK_FUNCTIONS_URL=https://functions.chain.link
CHAINLINK_API_KEY=your-chainlink-api-key

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false

# =================================
# Monitoring & Metrics
# =================================
ENABLE_METRICS=true
METRICS_PORT=9090

# =================================
# Production Deployment
# =================================
# For Render/Heroku/Railway deployment
# DATABASE_URL will override MONGODB_URI if present
# DATABASE_URL=mongodb+srv://user:pass@cluster.mongodb.net/dbname